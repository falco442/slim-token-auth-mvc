{
    "name": "slim/slim-token-auth-mvc",
    "description": "A Slim Framework skeleton to build REST API with token autentication",
    "keywords": ["microframework", "rest"],
    "homepage": "https://github.com/falco442/slim-token-auth-mvc",
    "license": "MIT",
    "authors": [
        {
            "name": "Marco Francaviglia"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "illuminate/database": "~5.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
	"scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
	},
    "autoload": {
        "psr-4": {
            "App\\Controller\\": "src/Controller",
            "Middleware\\Auth\\": "src/Middleware/Auth"
        }
    }
}
